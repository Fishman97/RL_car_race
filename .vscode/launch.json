{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Car Racing Env (Manual Control)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--mode", "play",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Car Racing Env (Random Agent)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--agent-type", "random",
                "--render-mode", "human",
                "--mode", "play",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Car Racing Env (DQN Best Checkpoint)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
